<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">

    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] [%X{traceId}] [%logger{36}@%L]: %msg%n
        </Property>
        <Property name="APP_LOG_ROOT">${sys:user.dir}/log</Property>
        <Property name="COMPRESSION_EXT">.gz</Property>
    </Properties>

    <Appenders>

        <Console name="CONSOLE_SYNC" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingRandomAccessFile name="MAIN_FILE_SYNC"
                                 fileName="${APP_LOG_ROOT}/application.log"
                                 filePattern="${APP_LOG_ROOT}/application-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="DEBUG_FILE_SYNC"
                                 fileName="${APP_LOG_ROOT}/debug.log"
                                 filePattern="${APP_LOG_ROOT}/debug-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30" compressionLevel="9"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="INFO_FILE_SYNC"
                                 fileName="${APP_LOG_ROOT}/info.log"
                                 filePattern="${APP_LOG_ROOT}/info-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30" compressionLevel="9"/>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="ERROR_FILE_SYNC"
                                 fileName="${APP_LOG_ROOT}/error.log"
                                 filePattern="${APP_LOG_ROOT}/error-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30" compressionLevel="9"/>
        </RollingRandomAccessFile>

        <AsyncAppender name="CONSOLE">
            <AppenderRef ref="CONSOLE_SYNC"/>
        </AsyncAppender>

        <AsyncAppender name="MAIN_FILE">
            <AppenderRef ref="MAIN_FILE_SYNC"/>
        </AsyncAppender>

        <AsyncAppender name="DEBUG_FILE">
            <AppenderRef ref="DEBUG_FILE_SYNC"/>
        </AsyncAppender>

        <AsyncAppender name="INFO_FILE">
            <AppenderRef ref="INFO_FILE_SYNC"/>
        </AsyncAppender>

        <AsyncAppender name="ERROR_FILE">
            <AppenderRef ref="ERROR_FILE_SYNC"/>
        </AsyncAppender>

    </Appenders>

    <Loggers>

        <!-- ROOT -->
        <Root level="info">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="MAIN_FILE"/>
        </Root>

        <!-- APPLICATION -->
        <Logger name="co.id.jalin.qrmapper" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
            <AppenderRef ref="INFO_FILE"/>
            <AppenderRef ref="ERROR_FILE"/>
        </Logger>

        <!-- Hibernate SQL -->
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder"
                level="trace" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <Logger name="org.hibernate.stat" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <Logger name="org.springframework.data.jpa" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

    </Loggers>

</Configuration>
<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">

    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] [%X{traceId}] [%logger{36}@%L]: %msg%n</Property>
        <Property name="APP_LOG_ROOT">${sys:user.dir}/log</Property>
        <Property name="COMPRESSION_EXT">.gz</Property>
    </Properties>

    <Appenders>

        <!-- Console Appender -->
        <Console name="CONSOLE" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling Random Access File for application.log (DEBUG level) -->
        <RollingRandomAccessFile name="MAIN_FILE"
                                 fileName="${APP_LOG_ROOT}/application.log"
                                 filePattern="${APP_LOG_ROOT}/application-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="2">
                    <IfFileName glob="application-*.log.gz">
                        <IfLastModified age="30d"/>
                    </IfFileName>
                    <IfFileName glob="application-*.log">
                        <IfLastModified age="7d"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <!-- Rolling Random Access File for debug.log (DEBUG level) -->
        <RollingRandomAccessFile name="DEBUG_FILE"
                                 fileName="${APP_LOG_ROOT}/debug.log"
                                 filePattern="${APP_LOG_ROOT}/debug-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <DefaultRolloverStrategy max="30" compressionLevel="9">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="2">
                    <IfFileName glob="debug-*.log.gz">
                        <IfLastModified age="90d"/>
                    </IfFileName>
                    <IfFileName glob="debug-*.log">
                        <IfLastModified age="7d"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <!-- Rolling Random Access File for info.log (INFO level) -->
        <RollingRandomAccessFile name="INFO_FILE"
                                 fileName="${APP_LOG_ROOT}/info.log"
                                 filePattern="${APP_LOG_ROOT}/info-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <DefaultRolloverStrategy max="30" compressionLevel="9">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="2">
                    <IfFileName glob="info-*.log.gz">
                        <IfLastModified age="180d"/>
                    </IfFileName>
                    <IfFileName glob="info-*.log">
                        <IfLastModified age="7d"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

        <!-- Rolling Random Access File for error.log (ERROR level) -->
        <RollingRandomAccessFile name="ERROR_FILE"
                                 fileName="${APP_LOG_ROOT}/error.log"
                                 filePattern="${APP_LOG_ROOT}/error-%d{yyyy-MM-dd}-%i.log${COMPRESSION_EXT}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <DefaultRolloverStrategy max="30" compressionLevel="9">
                <Delete basePath="${APP_LOG_ROOT}" maxDepth="2">
                    <IfFileName glob="error-*.log.gz">
                        <IfLastModified age="365d"/>
                    </IfFileName>
                    <IfFileName glob="error-*.log">
                        <IfLastModified age="7d"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>

    </Appenders>

    <Loggers>

        <!-- Root Logger (Console & Application Log) -->
        <Root level="info">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="MAIN_FILE"/>
        </Root>

        <!-- Application Logger -->
        <Logger name="co.id.jalin.qrmapper" level="debug" >
            <AppenderRef ref="DEBUG_FILE"/>
            <AppenderRef ref="INFO_FILE"/>
            <AppenderRef ref="ERROR_FILE"/>
        </Logger>

        <!-- Hibernate SQL Logger - Show queries in console and debug file -->
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <!-- Hibernate Parameter Binding Logger -->
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <!-- Hibernate Statistics (optional) -->
        <Logger name="org.hibernate.stat" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

        <!-- Spring Data JPA Logger -->
        <Logger name="org.springframework.data.jpa" level="debug" additivity="false">
            <AppenderRef ref="DEBUG_FILE"/>
        </Logger>

    </Loggers>

</Configuration>